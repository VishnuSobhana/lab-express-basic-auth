<p>
  {{errorMessage}}
</p>
<form action="/auth/signup" method="post">

  <div>
    <label for="username">Username: </label>
    <input
      type="text"
      required
      id="username"
      name="username"
      placeholder="Username:"
    />
  </div>
  <div>
    <label for="password">Password: </label>
    <input type="password" required id="password" name="password" />
  </div>

  <button>Sign up</button>
</form>